[core]
  excludesfile = /Users/wbaker/.gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX
  editor = /usr/local/bin/vim
  trustctime = false
	autocrlf = input
	commitGraph = true
[color]
  branch = auto
  diff = auto
  status = auto
[alias]
  st = status
  co = checkout
  cob = checkout -b
  com = checkout main
  comb = "!f() { git fetch; git checkout -b $1 main; }; f"
  cow = checkout weekly-deploy
  c = commit
  ca = commit --amend
  b = branch
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  rc = commit --amend --no-edit
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
[branch]
  autosetupmerge = true
[diff]
  compactionHeuristic = true
  tool = Kaleidoscope
  colorMoved = zebra
	algorithm = patience
[interactive]
  diffFilter = diff-highlight
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[merge]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[mergetool]
  prompt = false
[push]
	default = current
[user]
	useConfigOnly = true
	name = Wes Baker
	email = wes@wesbaker.com
[pull]
	rebase = false
	default = current
[credential]
	helper =
	helper = store --file /opt/dev/var/private/git_credential_store
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[includeif "gitdir:~/src/github.com/Shopify/"]
	path = /Users/wesbaker/src/github.com/Shopify/.gitconfig_include

[init]
	defaultBranch = main
